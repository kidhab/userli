{% extends 'base.html.twig' %}

{% block subtitle %}{{ "error.title"|trans }}{% endblock %}

{% block navbar %}
    {% embed '@MopaBootstrap/Navbar/navbar.html.twig' with { fixedTop: true, staticTop: true, inverse: true, fluid: true } %}
        {% block brand %}
            <a class="navbar-brand" href="https://www.{{ domain }}">{{ domain }}</a>
        {% endblock %}

        {% block menu %}
            {{ mopa_bootstrap_menu('navbar-left') }}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>{{ "error.title"|trans }}</h1>
            {% if status_code == 404 %}
            <p class="lead">{{ "error.page_not_found"|trans }}</p>
            {% else %}
            <p class="lead">{{ "error.generic_error"|trans }}</p>
            {% endif %}
            <p><a class="btn btn-primary" href="{{ url('start') }}">{{ "error.back_link"|trans }}</a></p>
        </div>
    </div>
{% endblock %}
